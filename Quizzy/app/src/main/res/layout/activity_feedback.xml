<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/leaveFeedbackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Feedback"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:paddingTop="150dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your feedback"
        android:layout_marginBottom="16dp"
        android:height="100dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratethisQuizTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate this quiz"
        android:textSize="40sp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/star1ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onStarClick"
            android:tag="1"/>

        <ImageView
            android:id="@+id/star2ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onStarClick"
            android:tag="2"/>

        <ImageView
            android:id="@+id/star3ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onStarClick"
            android:tag="3"/>

        <ImageView
            android:id="@+id/star4ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onStarClick"
            android:tag="4"/>

        <ImageView
            android:id="@+id/star5ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_empty"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onStarClick"
            android:tag="5"/>

    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="submitFeedback"
        />

</LinearLayout>
