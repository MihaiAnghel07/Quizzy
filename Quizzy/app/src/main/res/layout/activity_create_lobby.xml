<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CreateLobbyActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewLobbyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lobby Code:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/primary"/>

    <TextView
        android:id="@+id/textViewSelectedQuestionSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLobbyCode"
        android:layout_marginTop="16dp"
        android:text="Selected Question Set:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/buttonSelectQuestionSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSelectedQuestionSet"
        android:layout_marginTop="16dp"
        android:text="Select Question Set"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/editTextDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSelectQuestionSet"
        android:layout_marginTop="16dp"
        android:hint="Duration (1-60)"
        android:inputType="number"
        android:maxLines="1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonStartQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDuration"
            android:text="Start Quiz"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/buttonCloseLobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonStartQuiz"

            android:text="Close Lobby"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCloseLobby"
        android:layout_marginTop="16dp" />

</LinearLayout>
